<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport"  content="width=device-width, initial-scale=1">
  <meta name="description" content="Get Your buddy at all the Tourist place to enjoy local.  located around the world.">
  <title>Native Buddy</title>
  {{!--
  <link rel="stylesheet" href="https://kit.fontawesome.com/ccd7f3985a.css" crossorigin="anonymous"> --}}

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/style.css">
  {{!-- Styling page link  --}}
  <link rel="stylesheet" href="/static/css/buddybiodata.css">
</head> 

<body>

  <!--Navbar from navbar.hbs partials -->
  {{>navbar data=details}}

  {{!-- image and names --}}
  <div class="container text-center">
    <div class="row">
      <div class="col prof-img">
        <img src="/static/images/mainimage.png" alt="">
      </div>
      <div class="col prof-name text-light">
        <h1>Explore Like local, feel <span>like a friend</span></h1>
        <p>Your true companion, in a unknown city </p>
      </div>
    </div>
  </div> 




  {{!-- Client and Buddy we have  --}}
  
  <div class="text-center statistics">
    <div class="row  ">
     <div class="col-md-12 row servicelist">
         <div class="col-md-6">
             <p class="fs-3"><b>Total Buddy </b></p>
             <p class="fs-2">12</p>
         </div>
         <div class="col-md-5">
             <p class="fs-3"><b>Services Provided</b></p>
             <p class="text-center fs-2">50+</p>
         </div>
     </div>
    </div>
  </div> 


 
  {{!-- About section --}}
  <section id="search-section">
    <div class="container search-me">
      {{!-- <h5 class="text-center">Buddy available at your location</h5> --}}
      <div class="mt-3 text-center mb-5 search-form">
        <form action="/buddy">
          <input type="text" name="lcn" placeholder="Enter Location..." value="Jaipur">
          <button type="submit"> Submit</button>
        </form>
      </div>
    </div>
  </section> 
  {{!-- About section end --}}


 

  {{!-- skills section --}}
  {{>skill value = skills}} 

  {{!-- location section --}}
  <section id="location-section" class="py-4">
    <div class="container proj-heading">
      <h1 class="text-center">Locations</h1>
      <div class="row mt-3 mb-3">
        {{!-- First service --}}  
        {{#each Projects}}
        <div class="col-md-4 Project-card mt-3"> 
          <div class="card">
            <div class="card-body ">
              <div class="row locationImage">
                <div class="col-md-6">
                  <h4 class="card-title">{{this.ProjName}}</h4>
                  <p>{{this.langUsed}}</p>
                </div>
                <div class="col-md-6">
                  <img src="{{this.LcnImg}}" alt="{{this.ProjName}}">
                </div>
              </div>

              <p class="locationdesc">{{this.AboutProj}}</p>
              <a href="{{this.url}}" target="_blank"><button class="locationbutton">See Map</button></a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>
  
  {{!-- location section end --}}



  {{!-- Contact me section from partials --}}
  {{!-- {{>contact}} --}}
  {{>contact}}

  {{!-- js code --}}
  <script src="https://kit.fontawesome.com/ccd7f3985a.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
</body>

</html>